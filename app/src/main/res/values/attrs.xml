<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- See https://github.com/Clans/FloatingActionButton/blob/master/library/src/main/res/values/attrs.xml for inspiration-->
    <declare-styleable name="FabMenu">
        <!-- The main FloatingActionButton icon -->
        <attr name="fab_icon" format="reference"/>
        <!-- This is WIP -->
        <attr name="show_label" format="boolean"/>

        <!-- This is WIP -->
        <attr name="shape" format="enum">
            <enum name="normal" value="0"/>
            <enum name="round" value="1"/>
            <enum name="roundedSquare" value="2"/>
        </attr>

        <!-- The orientation of child buttons. Can be bottomToTop, topToBottom, leftToRight, rightToLeft, or bloom -->
        <attr name="orientation" format="enum">
            <enum name="bottomToTop" value="0"/>
            <enum name="topToBottom" value="1"/>
            <enum name="leftToRight" value="2"/>
            <enum name="rightToLeft" value="3"/>
            <enum name="bloom" value="4"/>
        </attr>
        <!-- The position of the main button. Can be bottomLeftCorner, bottomRightCorner, topLeftCorner, or topRightCorner -->
        <attr name="position" format="enum">
            <enum name="bottomLeftCorner" value="10"/>
            <enum name="bottomRightCorner" value="11"/>
            <enum name="topLeftCorner" value="12"/>
            <enum name="topRightCorner" value="13"/>
        </attr>

        <!-- The transparency value for the full-screen overlay. Value should be between 0 and 255. -->
        <attr name="veil_alpha" format="float"/>
        <!-- The tint for the full-screen overlay. -->
        <attr name="veil_tint" format="reference"/>
        <!-- The transparency value for the FloatingActionButton menu. Value should be between 0 and 255. -->
        <attr name="menu_overlay_alpha" format="float"/>
        <!-- The tint for the FloatingActionButton menu. -->
        <attr name="menu_overlay_tint" format="reference"/>
    </declare-styleable>
    <declare-styleable name="FloatingActionButton">
        <attr name="label" format="string"/>
    </declare-styleable>

</resources>